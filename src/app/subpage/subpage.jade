            a(href="#" data-i18n="subpage.main-page")
            | &nbsp;-&nbsp;
            span(data-bind="text: title")
        .content
            h1(data-bind="text: title")
            // ko foreach: articles
            article
                // ko if: ('title' in $data) && title
                h2(data-bind="text: title")
                // /ko
                // ko if: ('media' in $data) && media
                .media(data-bind="foreach: media")
                    // ko if: type === 'file'
                    a(href="" target="_blank" data-bind="attr: { href: id }")
                        div(data-bind="css: type")
                            span(data-bind="text: name")
                            .btn-download-container
                                .btn-download Скачать
                    // /ko
                    // ko if: type === 'image'
                    a(href="" data-bind="attr: { href: id }, mediaPopup: {type: 'image'}")
                        div(data-bind="css: type")
                            img(src="" data-bind="attr: { src: id }")
                    // /ko
                    // ko if: type === 'video'
                    a(href="" data-bind="attr: { href: 'http://www.youtube.com/watch?v=' + id }, mediaPopup: {type: 'iframe'}")
                        div(data-bind="css: type")
                            img(src="" data-bind="attr: { src: 'http://img.youtube.com/vi/' + id + '/0.jpg' }, mediaPopup: {type: 'iframe'}")
                    // /ko
                // /ko
                // ko if: ('text' in $data) && text
                .text(data-bind="html: text")
                // /ko
            // /ko
